{% extends '_templates/base.njk' %}

{% block page_title %}Romance Starter Pack{% endblock %}

{% block page_description %}A list of standalones and popular firsts in series.{% endblock %}

{% block content %}

{# try to make the cards move/ hover a bit... or a pop-up with the book cover #}
{# try making another bake page of cards with books i personally like #}
{# consider making an about me page#}

<article class="container">
  <h1 class="fw-bold">A Reader's Starter Pack to Romance</h1>
  <p>A list of books to get started with reading from contemporary fiction to romantasy.</p>
<div class="row row-cols-1 row-cols-md-2 g-4">
    {% for book in starters.starter %}
    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">{{ book.book_name }}</h5>
                <h6>{{ book.author }}</h6>
                <p class="card-text">{{ book.blurb }}</p>
            </div>
            <div class="card-footer">
                <p>
                    <a href="{{ book.source }}" class="card-link">More about the book</a>
                </p>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
  
</article>
{% endblock %}