{% extends '_templates/base.njk' %}

{% block page_title %}Romance Starter Pack{% endblock %}

{% block page_description %}A list of standalones and popular firsts in series.{% endblock %}

{% block content %}
<article class="container">
  <h1>A Reader's Starter Pack to Romance</h1>
  <p>A list of books to get started with reading from contemporary fiction to romantasy.</p>
<div class="row row-cols-1 row-cols-md-2 g-4 row-cols-lg-3">
    {% for book in starters.books %}
    <div class="col">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">{{ book.book_name }}</h5>
                <h6>{{ book.author }}</h6>
                <p class="card-text">{{ book.blurb }}</p>
            </div>
            <div class="card-footer">
                <a href="{{ book.source }}" class="card-link">More about the book</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
  
</article>
{% endblock %}