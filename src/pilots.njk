{% extends '_templates/base.njk' %}

{% block page_title %}New Series Starter Pack{% endblock %}

{% block page_description %}A list of firsts in series.{% endblock %}

{% block content %}

{# try to make the cards move/ hover a bit... or a pop-up with the book cover #}
